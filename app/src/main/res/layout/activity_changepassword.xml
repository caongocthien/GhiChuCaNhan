<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragment.ChangePassword"
    android:orientation="vertical">

    <TextView
        android:id="@+id/editchange"
        android:textSize="15dp"
        android:text="Chage your password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/edittextcurrentpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter current password"
        android:layout_below="@+id/editchange"
        />
    <EditText
        android:id="@+id/edittextnewpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter new password"
        android:layout_below="@id/edittextnewpassword"
        />
    <EditText
        android:id="@+id/edittextagainpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter again password"
        android:layout_below="@id/edittextnewpassword"
        />

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnChange"
            android:layout_below="@id/edittextagainpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change"

            />

        <Button
            android:id="@+id/btnHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Home"
            android:layout_marginLeft="200dp"
            />
    </LinearLayout>










</LinearLayout>