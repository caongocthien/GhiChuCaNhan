        android:id="@+id/nav_account"
        android:name="com.example.personal_note.fragment.AccountFragment"
        android:label="@string/Info"
        tools:layout="@layout/fragment_account" />
    <fragment
        android:id="@+id/nav_editProfile"
        android:name="com.example.personal_note.fragment.EditProfile"
        android:label="@string/EditProfile"
        tools:layout="@layout/activity_edit_profile" />
    <fragment
        android:id="@+id/nav_changePass"
        android:name="com.example.personal_note.fragment.ChangePassword"
        android:label="@string/Change"
        tools:layout="@layout/activity_changepassword" />
