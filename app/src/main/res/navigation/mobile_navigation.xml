<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.personal_note.HomeActivity"
        android:label="@string/menu_home"
        tools:layout="@layout/activity_home" />
    <fragment
        android:id="@+id/nav_category"
        android:name="com.example.personal_note.fragment.AddCategoryFragment"
        android:label="@string/Category"
        tools:layout="@layout/fragment_add_category" />
    <fragment
        android:id="@+id/nav_priority"
        android:name="com.example.personal_note.fragment.AddPriorityFragment"
